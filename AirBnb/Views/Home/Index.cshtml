@model IEnumerable<AirBnb.Models.Phong>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*HOMEPAGE*@
<main>

    @*Slider place view filter*@
    @*@Html.Partial("PlaceFilterCarousel")*@

    @Html.Action("GetCategories", "Home")



    <div class="content">
        <div class="content__container">
            <p class="content__container__text">
                Your
            </p>

            <ul class="content__container__list">
                <li class="content__container__list__item primaryColor">Choices !</li>
                <li class="content__container__list__item primaryColor">Styles !</li>
            </ul>
        </div>
    </div>


    @* PRICE SLIDER *@



    <div class="placeList">
        @foreach (var item in Model)
        {

            <a href=" @Url.Action("Detail", "Room")" class="placeFrame">
                <div class="slider-frame mx-auto mx-md-0">
                    <div class="slide-images">
                        <div class="img-container">
                            <img src="@item.HinhAnh1" class="img">
                        </div>

                        <div class="img-container">
                            <img src="@item.HinhAnh2" class="img">
                        </div>
                        <div class="img-container">
                            <img src="@item.HinhAnh3" class="img">
                        </div>
                    </div>
                </div>
                <div class="d-flex mt-2 fw-medium fs-5 text-black">@item.TieuDe</div>

                <div class="d-flex TypeAndRating mt-2 text-black-50">
                    <p>@item.DanhMucPhong.TenDanhMuc</p>
                    <p class="PRating"><i class="fa-solid fa-star"></i> Good</p>
                </div>

                <div class="d-flex text-black">
                    <span class=" fw-bold">  $@item.Gia1Ngay.ToString("0")</span>
                    <span> / night</span>
                </div>
            </a>
        }




    </div>


</main>


