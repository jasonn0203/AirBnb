
@{
    ViewBag.Title = "Stay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="my-4">
    <h2 class="fw-medium my-5 ">Request to book !</h2>

    <div class="row  flex-column flex-lg-row gap-md-4 align-items-center justify-content-center align-items-md-start justify-content-md-start">
        <div class="col bg-body">
            @*Payment options*@

            <div class="container mb-4 pb-4 border-custom-bottom">

                <div class="card p-4 w-100">

                    <div class="d-flex justify-content-between align-items-center">

                        <h5 class="total-amount">Pay with</h5>
                        <img src="https://img.icons8.com/dusk/64/000000/visa.png" width="30" class="visa-icon" />

                    </div>


                    <div class="pt-4">
                        <label for="card-number" class="d-flex column-gap-4 align-items-center">
                            <span class="label-text label-text-cc-number">CARD NUMBER</span>

                        </label>


                        <input id="card-number" type="tel" style="min-width: 75%!important;" name="credit-number" class="form-control credit-card-number pe-0" maxlength="19" placeholder="Card number">



                    </div>


                    <div class="d-flex flex-column justify-content-between pt-4">

                        <div>
                            <label><span class="label-text">EXPIRY</span>	</label>
                            <input type="date" name="expiry-date" class="form-control expiry-class" style="min-width: 75%!important" placeholder="MM / YY">

                        </div>

                        <div>
                            <label><span class="label-text">CVV</span></label>
                            <input type="tel" name="cvv-number" class="form-control cvv-class" style="min-width: 75%!important" maxlength="4" pattern="\d*">

                        </div>

                    </div>


                </div>

            </div>



            <div>

                <h5 class="total-amount my-4">Required for your trip !</h5>

                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="total-amount fs-5 fw-medium">Message the Host</h5>
                        <p class="sub-text-color">Let the Host know why you're traveling and when you'll check in.</p>
                    </div>




                </div>
            </div>
        </div>
        <div class="col bg-danger-subtle">1111111</div>
    </div>

</main>


