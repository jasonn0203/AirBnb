<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/Assets/Images/airbnb_logo.png">


    <link href="~/Content/Site.css" rel="stylesheet" />


</head>
<body>
    @{
        var host = Session["ChuNha"] as AirBnb.Models.ChuNha;
    }
    <div class="dash">
        <div class="dash-nav dash-nav-dark">
            <header>
                <a href="#!" class="menu-toggle">
                    <i class="fas fa-bars"></i>
                </a>
                <a href="@Url.Action("Dashboard","Host")" class="easion-logo">


                    <span class="text-white">Host</span>
                </a>
            </header>
            <nav class="dash-nav-list">
                <a href="@Url.Action("Dashboard","Host")" class="dash-nav-item">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
                <div class="dash-nav-dropdown">
                    <a href="@Url.Action("RoomChart","Host", new {maChuNha = host.MaChuNha})" class="dash-nav-item ">
                        <i class="fas fa-chart-bar"></i>
                        Charts
                    </a>

                </div>


                <div class="dash-nav-dropdown">
                    <a href="@Url.Action("RoomManagement","Host")" class="dash-nav-item ">
                        <i style="color: #FF5F63;" class="fa-solid fa-gear"></i>
                        Room Management
                    </a>

                </div>

                <div class="dash-nav-dropdown">
                    <a href="@Url.Action("Promotion","Host")" class="dash-nav-item ">
                        <i style="color: #FF5F63;" class="fa-solid fa-percent"></i>
                        Promotions
                    </a>

                </div>




            </nav>
        </div>
        <div class="dash-app">
            <header class="dash-toolbar">
                <p class="w-100 text-truncate primaryColor fw-bolder d-flex align-items-center fs-2">DASHBOARD</p>


                <div class="tools">
                    <a href="https://github.com/jasonn0203/AirBnb" target="_blank" class="tools-item">
                        <i class="fab fa-github"></i>
                    </a>

                    <p class="w-100 text-truncate primaryColor fw-bolder d-flex align-items-center justify-content-center">@(host?.Ten)</p>



                    @* LOG OUT *@
                    <div class="dropdown tools-item">
                        <a href="@Url.Action("LogOut", "Host")" class="" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i style="color:#FF5F63;" class="fa-solid fa-right-from-bracket"></i>
                        </a>

                    </div>
                </div>
            </header>
            <div>
                @RenderBody()
            </div>
        </div>
    </div>





    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://unpkg.com/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/Scripts/app.js"></script>
    <script src="https://kit.fontawesome.com/103727226d.js" crossorigin="anonymous"></script>

</body>








</html>
