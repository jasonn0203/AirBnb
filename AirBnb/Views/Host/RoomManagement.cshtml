@model IEnumerable<AirBnb.Models.Phong>

@{
    ViewBag.Title = "RoomManagement";
    Layout = "~/Views/Shared/_HostLayout.cshtml";
}


<div class="container-fluid">

    <h2>RoomManagement</h2>
    <p class="bg-body">
        @Html.ActionLink("Create New", "CreateRoom")
    </p>

    @if (ViewBag.Message != null)
    {

        <p class="d-flex align-items-center justify-content-center text-danger fw-bolder fs-2">@ViewBag.Message</p>



    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TieuDe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoTa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gia1Ngay)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.NgayBatDau)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayKetThuc)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DanhMucPhong.TenDanhMuc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh1)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TieuDe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        $@item.Gia1Ngay.ToString("0")
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NgayBatDau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayKetThuc)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DanhMucPhong.TenDanhMuc)
                    </td>
                    <td>
                       <img style="width:50px;height:50px;" src="@item.HinhAnh1" />
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaPhong }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaPhong }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaPhong })
                    </td>
                </tr>
            }

        </table>




    }
</div>