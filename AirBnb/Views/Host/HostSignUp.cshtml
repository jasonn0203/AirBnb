
@{
    ViewBag.Title = "Host Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-5 rounded-4 overflow-hidden shadow">
    <div class="row">

        <div class="col-sm-6 col-md-8 form-section py-4">
            <div class="login-wrapper">
                <h2 class="login-title primaryColor">Sign Up As Host</h2>

                <form class="" action="#!">
                    <div class="row flex-md-row flex-column  column-gap-md-4">
                        <div class="col-5">
                            <div class="form-group">
                                <label for="email" class="sr-only">Email</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group mb-3">
                                <label for="password" class="sr-only">Password</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                            </div>

                            <div class="form-group mb-3">
                                <label for="re-password" class="sr-only">Repeat Password</label>
                                <input type="password" name="password" id="re-password" class="form-control" placeholder="Password">
                            </div>

                            <div class="form-group mb-3">
                                <label for="experience" class="sr-only">Years Of Experience</label>
                                <input type="number" name="experience" id="experience" class="form-control" placeholder="4">
                            </div>
                        </div>


                        <div class="col-5">
                            <div class="form-group">
                                <label for="name" class="sr-only">Name</label>
                                <input type="text" name="email" id="name" class="form-control" placeholder="Nguyen Van A">
                            </div>
                            <div class="form-group mb-3">
                                <label for="address" class="sr-only">Address</label>
                                <input type="text" name="address" id="address" class="form-control" placeholder="Su Van Hanh">
                            </div>

                            <div class="form-group mb-3">
                                <label for="phone" class="sr-only">Phone Number</label>
                                <input type="tel" name="phoneNumber" id="phone" class="form-control" placeholder="0123456789">
                            </div>

                            <div class="form-group mb-3">
                                <label for="job" class="sr-only">Your Job</label>
                                <input type="text" name="job" id="job" class="form-control" placeholder="Software Engineer">
                            </div>

                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <input name="login" id="login" class="btn login-btn" type="button" value="Sign Up">

                        </div>

                    </div>

                </form>
                <p class="login-wrapper-footer-text">Already had an account? <a href="@Url.Action("HostSignIn","Host")" class="text-reset">SignIn here</a></p>
            </div>
        </div>


        <div class="col-sm-6 col-md-4 intro-section-host">
            <div class="brand-wrapper">

                <h1 class="intro-title text-center text-white fs-2">Host your room</h1>
            </div>


        </div>

    </div>
</div>


