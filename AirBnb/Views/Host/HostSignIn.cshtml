
@{
    ViewBag.Title = "HostSignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AirBnb.Models.ChuNha

<div class="container-fluid my-5 rounded-4 overflow-hidden shadow">
    <div class="row">
        <div class="col-sm-6 col-md-7 intro-section-host">
            <div class="brand-wrapper">

                <h1 class="intro-title text-center text-white fs-2">Host Your Room</h1>
            </div>


        </div>
        <div class="col-sm-6 col-md-5 form-section">
            <div class="login-wrapper">
                <h2 class="login-title primaryColor">Sign in</h2>

                @using (Html.BeginForm("HostSignIn", "Host"))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="email" class="sr-only">Email</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="sr-only">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-5">
                        <button class="btn login-btn" type="submit">Sign In</button>

                    </div>
                }

                <p class="login-wrapper-footer-text">Need an account? <a href="@Url.Action("HostSignUp","Host")" class="text-primary">Signup here</a></p>
            </div>
        </div>
    </div>
</div>