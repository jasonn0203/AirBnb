@model IEnumerable<AirBnb.Models.HoaDon>

@{
    ViewBag.Title = "Bills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-4">
    <h2>Bills</h2>

    @if (Model.Count() == 0)
    {
        <div class="d-flex align-items-center justify-content-center my-4">

            <p class="primaryColor fs-2 fw-bold">No bills in this list!</p>

        </div>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    Checked Out At
                </th>
                <th>
                    Bill ID
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Total Price
                </th>
                <th>
                    Days Stay
                </th>
              
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayTao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonDatPhong.MaDon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhachThue.Ten)
                    </td>
                    <td>
                        $@string.Format("{0:0}", item.DonDatPhong.TongChiPhi)
                    </td>
                    <td>
                        @string.Format("{0:0}", item.DonDatPhong.SoNgayThue)
                    </td>

                </tr>
            }

        </table>

    }



</div>
